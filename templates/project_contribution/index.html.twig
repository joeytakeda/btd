{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>ProjectContribution List</h1>
    <p class="count">
        Displaying {{ projectContributions|length }} projectContributions of {{ projectContributions.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Project</th>
                <th>Person</th>
                <th>Organization</th>
                <th>Role</th>
        </thead>
        <tbody>
            {% for projectContribution in projectContributions %}
                <tr>
                    <td>
                        <a href="{{ path('project_show', { 'id': projectContribution.project.id }) }}">
                            {{ projectContribution.project }}
                        </a>
                    </td>
                    <td>
                        {% if projectContribution.person %}
                        <a href="{{ path('person_show', { 'id': projectContribution.person.id }) }}">
                            {{ projectContribution.person }}
                        </a>
                        {% endif %}
                    </td>
                    <td>
                        {% if projectContribution.organization %}
                        <a href="{{ path('organization_show', { 'id': projectContribution.organization.id }) }}">
                            {{ projectContribution.organization }}
                        </a>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('project_role_show', { 'id': projectContribution.projectRole.id }) }}">
                            {{ projectContribution.projectRole }}
                        </a>
                    </td>
                        
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(projectContributions) }}
    </div>

{% endblock %}
